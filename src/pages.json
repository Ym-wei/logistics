{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/search/index",
      "style": {
        "navigationBarTitleText": "搜索"
      }
    },
    {
      "path": "pages/order/index",
      "style": {
        "navigationBarTitleText": "订单"
      }
    }
  ],
  "subPackages": [
    {
      "root": "page_order",
      "name": "page_order",
      "pages": [
        {
          "path": "detail/index",
          "style": {
            "navigationBarTitleText": "订单详情"
          }
        },
        {
          "path": "pay/index",
          "style": {
            "navigationBarTitleText": "付款"
          }
        },
        {
          "path": "evaluate/index",
          "style": {
            "navigationBarTitleText": "订单评价"
          }
        },
        {
          "path": "shopList/index",
          "style": {
            "navigationBarTitleText": "商品列表"
          }
        },
        {
          "path": "shipments/index",
          "style": {
            "navigationBarTitleText": "发运物流录入"
          }
        }
      ]
    }
  ],
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#3cc51f",
    "borderStyle": "white",
    "backgroundColor": "#ffffff",
    "spacing": "3px",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/icon/home.png",
        "selectedIconPath": "static/icon/home_active.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/search/index",
        "iconPath": "static/icon/prod.png",
        "selectedIconPath": "static/icon/prod_active.png",
        "text": "搜索"
      },
      {
        "pagePath": "pages/order/index",
        "iconPath": "static/icon/space.png",
        "selectedIconPath": "static/icon/space_active.png",
        "text": "订单"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
